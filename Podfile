platform :ios, '10.0'

source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

target ‘XCHelperTool-iOS’ do
    
    #    Swift
    
    pod 'Alamofire'                    #网络解析
    pod 'SwiftyJSON'                   #模型
    pod 'IQKeyboardManagerSwift'       #键盘
    pod 'R.swift'                      #文件
    pod 'Charts'                       #图表
    pod 'SnapKit'                      #约束
    pod 'Kingfisher'                   #图片缓存(类似SDWebImage)
    pod 'Spring'                       #动画
#    pod 'ImagePicker'                  #图片选择器

    
    #    OC

    pod 'SDWebImage'                   #图片缓存
    pod 'OpenShare'                    #第三方分享/支付
    pod 'MBProgressHUD'                #提示弹窗
    pod 'SDCycleScrollView'            #轮播图
    pod 'DZNEmptyDataSet'              #空数据占位符
    pod 'MJRefresh'                    #下拉/上拉刷新
    pod 'HMSegmentedControl'           #分段控制器
    pod 'YBImageBrowser'               #图片浏览
    pod 'FLAnimatedImage'              #GIF加载动画
    pod 'TZImagePickerController'      #图片选择器
    pod 'WRNavigationBar'              #导航栏
    
    #    pod 'ActionSheetPicker-3.0'

    
end
